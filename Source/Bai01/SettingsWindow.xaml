<Window x:Class="Bai01.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai01"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Canvas>
        <TextBox Name="server_TextBox" Text="{Binding sv}" Width="142" Height="44" Canvas.Left="302" Canvas.Top="105"></TextBox>
        <TextBox Name="db_TextBox" Text="{Binding dtb}" Width="142" Height="44" Canvas.Left="302" Canvas.Top="195"></TextBox>
        <Button IsDefault="True" Content="OK" Click ="OKButton_Click" Width="100" Height="25" Canvas.Left="208" Canvas.Top="287"></Button>
        <Button IsDefault="True" Content="Cancle" Click="Cancle_Button_Click" Width="100" Height="25" Canvas.Left="457" Canvas.Top="287" RenderTransformOrigin="0.364,0.924"></Button>
    </Canvas>

</Window>
